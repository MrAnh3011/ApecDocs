    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/select2-to-tree/select2totree.css" />
    <link href="~/assets/global.css" rel="stylesheet" />
    <!-- END LIBRARY STYLES -->

    <link rel="shortcut icon" href="~/favicon.ico" />

    @RenderSection("csss", false)

    <style>
        .title-main-logo {
            color: #E35C59;
            font-size: 30px;
            font-weight: 400;
            width: 65%;
        }

        .img-main-logo {
            width: 125px;
            height: 35px;
        }

        .select2 {
            width: 100% !important;
        }
    </style>
