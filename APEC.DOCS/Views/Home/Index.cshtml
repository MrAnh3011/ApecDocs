<div class="row">
    <div class="col-md-12">
        <h3 class="page-title">
            Trang chủ <small>tài liệu & văn bản</small>
        </h3>
    </div>
</div>
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-4">
        <!-- BEGIN PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-bars font-red-sunglo"></i>&nbsp;<span class="caption-subject font-red-sunglo bold uppercase">Danh mục</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="" title=""></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div id="doctype-tree" class="tree-demo">

                </div>
            </div>
        </div>

        <!-- END PORTLET-->
    </div>
    <div class="col-md-8">
        <!-- BEGIN PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search font-red-sunglo"></i>&nbsp;<span class="caption-subject font-red-sunglo bold uppercase">Tra cứu nâng cao</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="" title=""></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-group col-md-12">
                    <label class="control-label">Nhóm</label>
                    @* <input type="text" class="form-control" id="group-name" data-placeholder="Mời bạn chọn nhóm" /> *@
                    <select class="form-control" id="group-name"></select>
                </div>
                <div class="form-group col-md-6">
                    <label>Tên văn bản</label>
                    <input type="text" class="form-control" id="doc-name" placeholder="Tên văn bản">

                </div>
                <div class="form-group col-md-6">
                    <label>Loại văn bản</label>
                    <input type="text" class="form-control" id="doc-type" placeholder="Loại văn bản">

                </div>
                <div class="form-group col-md-6">
                    <label>Cơ quan ban hành</label>
                    <input type="text" class="form-control" id="org-publish" placeholder="Cơ quan ban hành">

                </div>
                <div class="form-group col-md-6">
                    <label>Ngày hiệu lực</label>
                    <div class="input-icon">
                        <i class="fa fa-calendar"></i>
                        <input type="text" class="form-control date-picker" id="active-date" data-date-format="dd/mm/yyyy" placeholder="Chọn ngày">
                    </div>
                </div>
                <div class="form-group text-center">
                    @* <a href="#" onclick="clearForm();" class="btn btn-primary"> *@
                    @*     <i class="fa fa-trash"></i> *@
                    @* </a> *@
                    <button onclick="searchListDocs();" class="btn red">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </div>

        <!-- END PORTLET-->
    </div>
</div>

<div class="row" id="portlet-lst-docs">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-list font-red-sunglo"></i>&nbsp;<span class="caption-subject font-red-sunglo bold uppercase">Danh sách</span>
                </div>
                @* <div class="tools"> *@
                @*     <a href="" class="collapse" data-original-title="" title=""></a> *@
                @*     <a href="" class="fullscreen" data-original-title="" title=""></a> *@
                @* </div> *@
                <div class="actions">

                    @if (strRole != null && strRole.Contains("1"))
                    {
                        <a href="~/Home/Create" class="btn btn-circle green ">
                            <i class="fa fa-plus"></i> Thêm mới tài liệu
                        </a>
                    }
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <table id="tbl-docs" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã văn bản</th>
                            <th>Số hiệu văn bản</th>
                            <th>Tên tài liệu</th>
                            <th>Danh mục TL</th>
                            <th>Mô tả</th>
                            <th>Cơ quan ban hành</th>
                            <th>Ngày hiệu lực</th>
                            <th>Trạng thái</th>
                            <th></th>
                            <th>Mô tả chi tiết</th>
                            <th>DocumentId</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*                     @foreach (var item in Model) *@
                        @*                     { *@
                        @*                         <tr> *@
                        @*                             <td>@item</td> *@
                        @*                             <td>@item.DocumentCode</td> *@
                        @*                             <td>@item.DocumentNo</td> *@
                        @*                             <td>@item.DisplayName</td> *@
                        @*                             <td>@item.DocTypeName</td> *@
                        @*                             <td>@item.DisplayName</td> *@
                        @*                             <td>@item.OrgPublish</td> *@
                        @*                             <td>@item.ActiveDate</td> *@
                        @*                             <td>@item.Status</td> *@
                        @*                             <td>Tải về</td> *@
                        @*                         </tr> *@
                        @*                     } *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <span class="caption-subject font-red-sunglo bold uppercase" id="detail-modal-title">Tra cứu nâng cao</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="detail-modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        var roleTypeStr = '@(ViewBag.RoleTypeString)';
        var sessionKey = '@(ViewBag.SSK)';

        $(document).ready(function() {
            if ('@TempData["Message"]' == "Edited") {
                toastr['success']("Cập nhật văn bản thành công!", "Cập nhật.");
            }

        });
    </script>
    <script src="~/Scripts/jszip.js"></script>
    <script src="~/Scripts/xlsx.full.min.js"></script>
    <script src="~/Scripts/filesaver.min.js"></script>
    <script src="~/Scripts/jhxlsx.js"></script>
    <script src="~/Scripts/datatables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/datatables/jszip.min.js"></script>
    <script src="~/Scripts/datatables/pdfmake.min.js"></script>
    <script src="~/Scripts/datatables/vfs_fonts.js"></script>
    <script src="~/Scripts/datatables/buttons.html5.min.js"></script>
    <script src="~/Scripts/datatables/buttons.print.min.js"></script>

    <script src="~/assets/client/controllers/homeController.js"></script>
}

